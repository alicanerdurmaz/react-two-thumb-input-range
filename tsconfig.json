{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "module": "esnext",
    "target": "es6",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "jsxImportSource": "@emotion/react"
  },
  "include": ["**/*.tsx", "**/*.ts"],
  "exclude": ["node_modules", "build", "dist", "lib", "storybook-static", "src/**/*.stories.tsx", "src/**/*.test.tsx"]
}
